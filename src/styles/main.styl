  content: "â˜ž "  

code.file
  color: lightseagreen
  background-color: #eee

a.docs-icon
  float: right
  margin-top:12px
  background-color: cornflowerblue
  border: 5px solid
  border-color: cornflowerblue
  border-radius: 50%
  text-decoration: none

a.docs-icon::before
  display: block
  content: "Mithril Docs"
  color: white
  font-size: .9rem

a.docs-icon:hover
  background-color: crimson
  border-color: crimson
  text-decoration: none

#example + p
  width: 50%
  height: 160px
  margin-top: 20px

#example
  float: right
  clear: right
  width: 50%
  height: 160px

.example
  background: #ffe
  border: 1px solid #ddd
  display: block
  font: Courier New
  margin-bottom: 20px
  padding: 5px 10px

.example a
  display:block
  margin:0 0 10px

.example a:after
  content:" \bb"